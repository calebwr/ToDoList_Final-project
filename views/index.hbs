{{! submit a to do item. }}

<form method="POST">
		<label>Post a to do item:
			<input name="title" placeholder="To Do Item" autofocus>
		</label>
		<button type="submit">submit</button>
</form>

{{#each items}}
  <!-- Small modal that deletes a to do item-->
  <form method="POST" action="/delete">
    <input type="hidden" value="{{title}}" name="title" />
    <button type="submit" class="btn btn-danger btn-xs" data-toggle="modal" data-target="#delete">
      <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
    </button>
  </form>
{{/each}}

<div id="to-do-items">
  <ul>
      {{#each items}}
      <li>{{title}}</li>
      {{/each}}
  </ul>
</div>


